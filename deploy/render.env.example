# Paste into Render -> Environment -> "Add from .env"
# Fill the secrets (keys/tokens) with your real values.

TIMEZONE=Africa/Cairo
LOG_LEVEL=INFO

# Core
DASHBOARD_PASSWORD=
ADMIN_USER_ID=

# LLM
GROQ_API_KEY=
SMART_MODEL_ROUTING=1
GROQ_MODEL_LONG=llama-3.1-70b-versatile
GROQ_MODEL_SHORT=llama-3.1-8b-instant

# Telegram
TELEGRAM_TOKEN=
CHANNEL_ID=

# Dev.to
DEVTO_API_KEY=

# Blogger
BLOGGER_BLOG_ID=
BLOGGER_CLIENT_ID=
BLOGGER_CLIENT_SECRET=
BLOGGER_REFRESH_TOKEN=

# Facebook
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=

# ImgBB (optional, for hosted images)
IMGBB_API_KEY=

# Images: local backgrounds + overlay
ENABLE_IMAGE_AI=0
LOCAL_BACKGROUNDS_ENABLED=1
LOCAL_BACKGROUNDS_DIR=assets/backgrounds
LOCAL_BACKGROUNDS_STRATEGY=topic
LOCAL_BACKGROUNDS_DIM=0.12
LOCAL_BACKGROUNDS_BLUR=0

IMAGE_WATERMARK_ENABLED=1
IMAGE_WATERMARK_TEXT=Mohamed Shaban
IMAGE_WATERMARK_OPACITY=0.33
IMAGE_WATERMARK_FONT_SIZE=18

AUTO_EMOJI_TITLE=1
