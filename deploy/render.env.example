################################################################################
# ContentOrbit (Render) — MASTER Environment Variables
# Paste into Render -> Service -> Environment -> "Add from .env"
# Fill secrets (tokens/keys) and keep defaults unless you know why.
################################################################################

# ─────────────────────────────────────────────────────────────────────────────
# Runtime / Logging
# ─────────────────────────────────────────────────────────────────────────────
TIMEZONE=Africa/Cairo
LOG_LEVEL=INFO

# Render sets PORT automatically for web services; keep as-is unless self-hosting.
PORT=8080

# ─────────────────────────────────────────────────────────────────────────────
# Core / Access
# ─────────────────────────────────────────────────────────────────────────────
DASHBOARD_PASSWORD=
ADMIN_USER_ID=

# Optional hard cap safety (ConfigManager enforces <= this value; defaults to 7)
MAX_POSTS_PER_DAY=7

# ─────────────────────────────────────────────────────────────────────────────
# LLM (Groq) — required for content generation
# ─────────────────────────────────────────────────────────────────────────────
# You can use ONE key OR a pool:
GROQ_API_KEY=
GROQ_API_KEYS=

# Smart model routing for tasks (recommended)
SMART_MODEL_ROUTING=1

# Common model presets
GROQ_MODEL_LONG=llama-3.1-70b-versatile
GROQ_MODEL_SHORT=llama-3.1-8b-instant
GROQ_MODEL_LONG_EN=
GROQ_MODEL_SHORT_EN=
GROQ_MODEL_SOCIAL=
GROQ_MODEL_SOCIAL_EN=

# Optional per-task overrides (only used when SMART_MODEL_ROUTING=1)
GROQ_MODEL_BLOGGER=
GROQ_MODEL_DEVTO=
GROQ_MODEL_TELEGRAM=
GROQ_MODEL_FACEBOOK=
GROQ_MODEL_LINKEDIN=
GROQ_MODEL_REDDIT=
GROQ_MODEL_SUMMARY=
GROQ_MODEL_TITLE=
GROQ_MODEL_QA=
GROQ_MODEL_VIDEO=
GROQ_MODEL_VIDEO_SCRIPT=

# Image-prompt generation (if you ever re-enable AI images)
GROQ_MODEL_IMAGE_PROMPT=
GROQ_MODEL_PROMPT=
GROQ_IMAGE_PROMPT_MODEL=
DISABLE_GROQ_FOR_IMAGE_PROMPT=0

# ─────────────────────────────────────────────────────────────────────────────
# Telegram (Publishing Bot) — required for Telegram posting
# ─────────────────────────────────────────────────────────────────────────────
# Token aliases supported: TELEGRAM_TOKEN or TELEGRAM_BOT_TOKEN
TELEGRAM_TOKEN=
TELEGRAM_BOT_TOKEN=

# Channel aliases supported: CHANNEL_ID or TELEGRAM_CHANNEL_ID
CHANNEL_ID=
TELEGRAM_CHANNEL_ID=

# ─────────────────────────────────────────────────────────────────────────────
# Telegram Chatbot (Polling) — needed for /start & menus
# ─────────────────────────────────────────────────────────────────────────────
ENABLE_TELEGRAM_CHATBOT=1

# Polling lock (avoid TelegramConflictError during deploy overlap)
# Use /tmp (non-persistent) to avoid stale locks on Render.
TG_POLL_LOCK_PATH=/tmp/telegram_polling.lock
TG_POLL_LOCK_STALE_SECONDS=600
TG_POLL_LOCK_MAX_WAIT_SECONDS=120

# ─────────────────────────────────────────────────────────────────────────────
# Dev.to (optional)
# ─────────────────────────────────────────────────────────────────────────────
DEVTO_API_KEY=

# ─────────────────────────────────────────────────────────────────────────────
# Blogger (optional)
# ─────────────────────────────────────────────────────────────────────────────
BLOGGER_BLOG_ID=
BLOGGER_CLIENT_ID=
BLOGGER_CLIENT_SECRET=
BLOGGER_REFRESH_TOKEN=

# ─────────────────────────────────────────────────────────────────────────────
# Facebook (optional)
# Aliases supported: FACEBOOK_PAGE_ACCESS_TOKEN or FACEBOOK_PAGE_TOKEN
# ─────────────────────────────────────────────────────────────────────────────
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=
FACEBOOK_PAGE_TOKEN=

# ─────────────────────────────────────────────────────────────────────────────
# Images (recommended defaults: local backgrounds + watermark)
# ─────────────────────────────────────────────────────────────────────────────
# Upload hosting for generated images (required if you want public image URLs)
IMGBB_API_KEY=

# Local backgrounds
LOCAL_BACKGROUNDS_ENABLED=1
LOCAL_BACKGROUNDS_DIR=assets/backgrounds
LOCAL_BACKGROUNDS_STRATEGY=topic
LOCAL_BACKGROUNDS_DIM=0.12
LOCAL_BACKGROUNDS_BLUR=0

# Title emoji + watermark (branding)
AUTO_EMOJI_TITLE=1
IMAGE_WATERMARK_ENABLED=1
IMAGE_WATERMARK_TEXT=Mohamed Shaban
IMAGE_WATERMARK_OPACITY=0.33
IMAGE_WATERMARK_FONT_SIZE=18

# Social image variants for Telegram/Facebook
SOCIAL_IMAGE_SMART=1
SOCIAL_IMAGE_VARIANTS=3

# ─────────────────────────────────────────────────────────────────────────────
# AI Images (optional; default OFF)
# ─────────────────────────────────────────────────────────────────────────────
ENABLE_IMAGE_AI=0
IMAGE_AI_PROVIDER=auto

# Gemini (optional; used for image prompt generation only)
GEMINI_API_KEY=
GEMINI_PROMPT_MODEL=gemini-1.5-flash

# NVIDIA NIM / Flux Kontext (optional)
NVIDIA_API_KEY=
NVIDIA_FLUX_KONTEXT_URL=
NVIDIA_NIM_USE_EXAMPLE_ID=
NVIDIA_KONTEXT_EXAMPLE_ID=
NVIDIA_EXAMPLE_IMAGE_ID=
NVIDIA_IMAGE_STEPS=28
NVIDIA_CFG_SCALE=3.5
NVIDIA_IMAGE_SEED=0

# Tooling-only (used by tools/* scripts; safe to leave blank)
NVIDIA_TEST_IMAGE_SIZE=1024
NVIDIA_USE_REAL_IMAGE=0
