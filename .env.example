#+#+#+#+########################################################
# ContentOrbit - SAFE .env Template
# Copy to `.env` and fill values. Never commit your real `.env`.
########################################################################

# --- Core ---
TIMEZONE=Africa/Cairo
LOG_LEVEL=INFO

# Render deploy tip: keep chatbot polling off by default
ENABLE_TELEGRAM_CHATBOT=0

########################################################################
# LLM (Groq) - supports one key OR a pool
########################################################################
GROQ_API_KEY=

# Optional: comma-separated pool. If set, it overrides GROQ_API_KEY.
# Example: GROQ_API_KEYS=key1,key2,key3
GROQ_API_KEYS=

# Optional per-task model routing ("mix" strategy)
GROQ_MODEL_LONG=llama-3.1-70b-versatile
GROQ_MODEL_SHORT=llama-3.1-8b-instant
GROQ_MODEL_BLOGGER=
GROQ_MODEL_DEVTO=
GROQ_MODEL_TELEGRAM=
GROQ_MODEL_FACEBOOK=
GROQ_MODEL_IMAGE_PROMPT=

########################################################################
# Google AI Studio (Gemini) - FREE-ish fallback for TEXT prompt-writing
# (Used when Groq is missing/disabled for image prompt generation)
########################################################################
GEMINI_API_KEY=
GEMINI_PROMPT_MODEL=gemini-1.5-flash

########################################################################
# Images: Local backgrounds (preferred) + optional AI images
########################################################################

# Preferred: use background assets from a local folder (e.g. output/)
LOCAL_BACKGROUNDS_ENABLED=1
LOCAL_BACKGROUNDS_DIR=assets/backgrounds
LOCAL_BACKGROUNDS_STRATEGY=topic   # topic | random
LOCAL_BACKGROUNDS_DIM=0.12
LOCAL_BACKGROUNDS_BLUR=0

# Optional AI images (OFF by default). The system will still fall back safely.
ENABLE_IMAGE_AI=0
IMAGE_AI_PROVIDER=auto   # auto | nvidia | none

# One key OR pool (comma-separated)
NVIDIA_API_KEY=
NVIDIA_API_KEYS=

NVIDIA_FLUX_KONTEXT_URL=https://ai.api.nvidia.com/v1/genai/black-forest-labs/flux.1-kontext-dev
NVIDIA_IMAGE_STEPS=28
NVIDIA_CFG_SCALE=3.5
NVIDIA_IMAGE_SEED=0

# Save credits: disable Groq for image prompt-writing only
DISABLE_GROQ_FOR_IMAGE_PROMPT=0
GROQ_IMAGE_PROMPT_MODEL=

# Social image smartness
SOCIAL_IMAGE_SMART=1
SOCIAL_IMAGE_VARIANTS=3  # max cap (1..5)

# Branding / watermark
IMAGE_WATERMARK_ENABLED=1
IMAGE_WATERMARK_TEXT=Mohamed Shaban
# IMAGE_WATERMARK_TEXT=RonavAI
IMAGE_WATERMARK_OPACITY=0.33
IMAGE_WATERMARK_FONT_SIZE=18

# Emoji
AUTO_EMOJI_TITLE=1

########################################################################
# ImgBB (upload)
########################################################################
IMGBB_API_KEY=

########################################################################
# Telegram
########################################################################
TELEGRAM_TOKEN=
TELEGRAM_BOT_TOKEN=
CHANNEL_ID=
TELEGRAM_CHANNEL_ID=
ADMIN_USER_ID=

########################################################################
# Facebook
########################################################################
FACEBOOK_PAGE_ID=
FACEBOOK_PAGE_ACCESS_TOKEN=

########################################################################
# Dev.to
########################################################################
DEVTO_API_KEY=

########################################################################
# Blogger
########################################################################
BLOGGER_BLOG_ID=
BLOGGER_CLIENT_ID=
BLOGGER_CLIENT_SECRET=
BLOGGER_REFRESH_TOKEN=
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_secret
GOOGLE_REFRESH_TOKEN=1//your_refresh_token

# ═══════════════════════════════════════════════════════════════
# DEV.TO API (Optional - for tech content)
# ═══════════════════════════════════════════════════════════════
DEVTO_API_KEY=your_devto_api_key

# ═══════════════════════════════════════════════════════════════
# FACEBOOK PAGE (Optional - for distribution)
# ═══════════════════════════════════════════════════════════════
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token

# ═══════════════════════════════════════════════════════════════
# DASHBOARD SECURITY
# ═══════════════════════════════════════════════════════════════
DASHBOARD_PASSWORD=your_secure_password_here

# ═══════════════════════════════════════════════════════════════
# SYSTEM SETTINGS
# ═══════════════════════════════════════════════════════════════
TIMEZONE=Africa/Cairo
LOG_LEVEL=INFO
